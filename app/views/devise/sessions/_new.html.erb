<div class="modal-dialog modal-sm">
  <div class="modal-content">
    <div class="modal-header">
      <button class="close" data-dismiss="modal">x</button>
      <h2 class="dark">SE CONNECTER</h2>
    </div>
    <div class="modal-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: false) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, label: 'Mot de passe', required: false %>
        <%= f.input :remember_me, label: 'Se rappeler de moi', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
