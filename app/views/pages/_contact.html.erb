<section id="contact" class="contact-section">
  <div class="wrapper-contact">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h2>PRENDRE RENDEZ-VOUS</h2>
          <h3>Notre expérience au service de votre beauté</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 cards-contact">
          <div class="card-contact text-center">
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
            contact@nais.fr
          </div>
          <div class="card-contact text-center">
            <i class="fa fa-user-o" aria-hidden="true"></i>
            06 23 03 29 **
          </div>
          <div class="card-contact text-center">
            <i class="fa fa-map-marker" aria-hidden="true"></i>
            35 rue Alain Le Lay<br>
            29900 Concarneau
          </div>
        </div>
      </div>

      <div class="row">
        <%= simple_form_for(@contact, html: { class: 'text-center' }) do |f| %>
          <div class="col-xs-12 col-md-4 col-md-offset-2" style="margin-bottom: 14px;">
            <%= f.input :name, label: false, placeholder: "Nom" %>
          </div>
          <div class="col-xs-12 col-md-4 col-md-offset-0" style="margin-bottom: 14px;">
            <%= f.input :email, label: false, placeholder: "Email" %>
          </div>
          <div class="col-xs-12 col-md-8 col-md-offset-2">
            <%= f.input :message, label: false, input_html: { rows: 4 }, placeholder: "Message" %>
          </div>
          <div class="col-xs-12 col-md-8 col-md-offset-2">
            <%= f.submit "PRENDRE RENDEZ-VOUS", class: "btn btn-contact" %>
          </div>
        <% end %>
        <!-- </div> -->
      </div>
    </div>
  </div>
</section>
